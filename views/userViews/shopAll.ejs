  <script>

document.addEventListener('DOMContentLoaded', function() {


  //helper function for keeping the  filter for all pages
  function getPageUrl(pageNumber) {
    const url = new URL(window.location.href);
    url.searchParams.set('page', pageNumber);
    return url.toString();
}


// Make the function available to EJS



    const sortSelect = document.getElementById('sortSelect');
    const minPriceInput = document.getElementById('minPrice');
    const maxPriceInput = document.getElementById('maxPrice');
    const applyPriceBtn = document.getElementById('applyPriceFilter');
    const clearFiltersBtn = document.getElementById('clearFilters');
    const categoryCheckboxes = document.querySelectorAll('.category-check[type="checkbox"]');
    const inStockCheckBox = document.getElementById("inStockCheck")
    const onSaleCheckBox = document.getElementById("onSaleCheck")
    function updateFilters() {
        const url = new URL(window.location.href);
        
        // Handle sort
        const sortValue = sortSelect.value;
        if (sortValue !== 'default') {
            url.searchParams.set('sort', sortValue);
        } else {
            url.searchParams.delete('sort');
        }

        // Handle price range
        const minPrice = minPriceInput.value;
        const maxPrice = maxPriceInput.value;
        if (minPrice) url.searchParams.set('minPrice', minPrice);
        if (maxPrice) url.searchParams.set('maxPrice', maxPrice);

        // Handle categories
        const selectedCategories = Array.from(categoryCheckboxes)
            .filter(cb => cb.checked && cb.id.includes('Check'))
            .map(cb => cb.value);
        
        if (selectedCategories.length > 0) {
            url.searchParams.set('categories', selectedCategories.join(','));
        } else {
            url.searchParams.delete('categories');
        }

        // Handle availability
        const inStock = document.getElementById('inStockCheck').checked;
        const onSale = document.getElementById('onSaleCheck').checked;
        
        if (inStock) url.searchParams.set('status', 'Available');
        if (onSale) url.searchParams.set('isOfferApplied', 'true');

        // Update page
        window.location.href = url.toString();
    }

    // Event Listeners
    sortSelect.addEventListener('change', updateFilters);
    applyPriceBtn.addEventListener('click', updateFilters);
    inStockCheckBox.addEventListener('change', updateFilters);
    onSaleCheckBox.addEventListener('change', updateFilters);
    categoryCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateFilters);
    });
    
    
    // Clear all filters
    clearFiltersBtn.addEventListener('click', () => {
        window.location.href = window.location.pathname;
    });

    // Initialize filters from URL
    const urlParams = new URLSearchParams(window.location.search);
    
    if (urlParams.has('sort')) {
        sortSelect.value = urlParams.get('sort');
    }
    if (urlParams.has('minPrice')) {
        minPriceInput.value = urlParams.get('minPrice');
    }
    if (urlParams.has('maxPrice')) {
        maxPriceInput.value = urlParams.get('maxPrice');
    }
    if (urlParams.has('categories')) {
        const categories = urlParams.get('categories').split(',');
        categories.forEach(category => {
            const checkbox = document.querySelector(`input[value="${category}"]`);
            if (checkbox) checkbox.checked = true;
        });
    }
    if (urlParams.has('status')) {
        document.getElementById('inStockCheck').checked = urlParams.get('status') === 'Available';
    }
    if (urlParams.has('isOfferApplied')) {
        document.getElementById('onSaleCheck').checked = urlParams.get('isOfferApplied') === 'true';
    }
});
  </script>
